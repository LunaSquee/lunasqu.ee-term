body
    font-family: monospace
    background-color: black
    margin: 0
    padding: 0

.term
    position: absolute
    left: 0
    right: 0
    top: 0
    bottom: 0

.char
    color: white
    font-size: 120%
    display: inline-block
    white-space: pre

.prompt
    position: relative
    width: 100%
    #pif
        opacity: 0
        position: absolute
    .cursor
        position: absolute
        display: inline-block
        border: 1px solid lime
        background-color: black
        z-index: -1
        &.focus
            background-color: lime
            border: none
a
    .char
        text-decoration: underline
